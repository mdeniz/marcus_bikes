<div class="bg-white shadow-lg rounded-md overflow-hidden p-10 text-slate-800">
  <div class="mx-auto w-full flex">
    <div class="mx-auto">
      <h1 class="font-bold text-2xl">Product Details</h1>

      <%= render @product %>

      <div data-controller="tabs" data-tabs-active-tab-class="-mb-px border-l border-t border-r rounded-t" class="pb-5">
        <ul class="list-reset flex border-b">
          <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->tabs#change:prevent">
            <a class="bg-white inline-block py-2 px-4 text-slate-600 hover:text-rose-700 font-semibold no-underline" href="#">Attributes</a>
          </li>
          <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change:prevent">
            <a class="bg-white inline-block py-2 px-4 text-slate-600 hover:text-rose-700 font-semibold no-underline" href="#">Customizable Parts</a>
          </li>
          <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change:prevent">
            <a class="bg-white inline-block py-2 px-4 text-slate-600 hover:text-rose-700 font-semibold no-underline" href="#">Banned Combinations</a>
          </li>
          <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change:prevent">
            <a class="bg-white inline-block py-2 px-4 text-slate-600 hover:text-rose-700 font-semibold no-underline" href="#">Price Changes</a>
          </li>
        </ul>

        <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
          <div class="overflow-x-auto">
          </div>
        </div>

        <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
          <div class="overflow-x-auto">
          </div>
        </div>

        <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
          <div class="overflow-x-auto">
          </div>
        </div>

        <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
          <div class="overflow-x-auto">
          </div>
        </div>
      </div>

      <%= link_to "Edit this product", edit_admin_product_path(@product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block bg-slate-600 text-white hover:bg-rose-600 text-xs" %>
      <%= link_to "Back to products", admin_products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block bg-slate-600 text-white hover:bg-rose-600 text-xs" %>
      <div class="inline-block ml-2">
        <%= button_to "Destroy this product", [:admin, @product], method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 bg-slate-600 text-white hover:bg-rose-600 text-xs" %>
      </div>
    </div>
  </div>
</div>