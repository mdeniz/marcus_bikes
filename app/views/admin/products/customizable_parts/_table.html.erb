<% if parts.empty? %>
  <div class="text-center shadow-lg rounded-md text-slate-700 bg-white p-24 col-span-4 overflow-hidden h-96 items-center">
    Sorry! There are no parts
  </div>
<% else %>
  <table class="min-w-full divide-y-2 divide-gray-200 text-sm">
    <thead class="ltr:text-left rtl:text-right">
      <tr>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Part</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Description</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Options</th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Order</th>
        <th class="px-4 py-2"></th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200">
      <% parts.each do |part| %>
        <tr>
          <td class="whitespace-nowrap px-4 py-2 text-slate-900"><%= part.name %></td>
          <td class="whitespace-nowrap px-4 py-2 text-slate-900"><%= truncate(part.description, length: 50) %></td>
          <td class="whitespace-nowrap px-4 py-2 text-slate-900"><%= truncate(part.products.map(&:model).join(", "), length: 50) %></td>
          <td class="whitespace-nowrap px-4 py-2 text-slate-700"><%= part.order %></td>
          <td class="whitespace-nowrap px-4 py-2 flex">
          <% if show_actions %>
              <a href="#" class="text-slate-600 transition hover:text-rose-600 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
              </a>
              <a href="#" class="text-slate-600 transition hover:text-rose-600 p-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>
              </a>
              <a href="#" class="text-slate-600 transition hover:text-rose-600 py-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                  />
                </svg>
              </a>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
