<div class="bg-white shadow-lg rounded-md overflow-hidden p-10 text-slate-800">
  <% content_for :title, "Categories" %>

  <div class="flex justify-between items-center pb-10">
    <h1 class="font-bold text-2xl">Categories</h1>
    <%= link_to "New category", new_admin_category_path, class: "rounded-lg py-3 px-5 bg-slate-600 text-white block hover:bg-rose-600" %>
  </div>
  
  <div class="overflow-x-auto">
    <% if @categories.empty? %>
      <div class="text-center shadow-lg rounded-md text-slate-700 bg-white p-24 col-span-4 overflow-hidden h-96 items-center">
        Sorry! There are no categories
      </div>
    <% else %>
      <table class="min-w-full divide-y-2 divide-gray-200 text-sm">
        <thead class="ltr:text-left rtl:text-right">
          <tr>
            <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Name</th>
            <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Description</th>
            <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Order</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-200">
          <% @categories.each do |category| %>
            <%= render partial: "list_item", locals: { category: } %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
<div class="pt-5">
  <%== pagy_info(@pagy, item_name: 'category'.pluralize(@pagy.count)) %>
</div>