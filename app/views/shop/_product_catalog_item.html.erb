<div class="flex flex-col gap-3 h-96">
  <div class="basis-1/2">
    <%= image_tag product.image, class: "w-full h-48 pb-5 object-cover" %>
  </div>
  <div class="basis-1/2 flex flex-col gap-3">
    <div>
      <span class="p-2 bg-rose-600 font-bold text-white">
        <%= product.customizable? ? "Customizable" : "#{product.standalone_price} â‚¬" %>
      </span>
    </div>

    <div class="font-bold">
      <%= product.brand %>
    </div>

    <div class="text-sm max-h-12">
      <%= product.model %> (<%= product.year %>)
    </div>

    <div class="grow"></div>

    <div class="pb-5 text-right">
      <%= link_to "See product", catalog_product_path(product.uuid), class: "rounded-lg mt-5 py-3 px-5 hover:bg-rose-600 bg-slate-500 text-white font-medium" %>
    </div>
  </div>
</div>
