<dialog data-modal-target="dialog" class="p-5 rounded-lg backdrop:bg-black/80">
  <div class="flex flex-col gap-3">
    <%= turbo_frame_tag "modal", class: "text-center grow" do %>
        <svg class="inline animate-spin -ml-1 mr-3 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Loading suitable products...
    <% end %>
    <div class="text-center pt-5">
      <button data-action="modal#close" class="py-3 px-5 bg-slate-700 text-white rounded-md ring-0 outline-none hover:bg-rose-600">Close</button>
    </div>
  </div>
</dialog>
