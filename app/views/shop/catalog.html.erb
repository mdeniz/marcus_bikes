<div class="grid grid-cols-4 gap-5">
  <% if @products.empty? %>
    <div class="text-center shadow-lg rounded-md text-slate-700 bg-white p-24 col-span-4 overflow-hidden h-96 items-center">
      Sorry! There are no products for this category
    </div>
  <% end %>
  <% @products.each do |product| %>
    <div class="shadow-lg rounded-md border-slate-600 bg-white p-3 col-span-4 lg:col-span-1 overflow-hidden">
      <%= render partial: "shop/catalog/product_item", locals: { product: } %>
    </div>
  <% end %>
</div>
<div class="pt-5">
  <%== pagy_info(@pagy, item_name: 'product'.pluralize(@pagy.count)) %>
</div>