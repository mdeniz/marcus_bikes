<div class="flex gap-3 bg-white shadow-lg rounded-md overflow-hidden p-10 text-slate-800">
  <div class="basis-1/2">
    <%= image_tag @product.image, class: "w-full pb-5 object-cover" %>
  </div>
  <div class="basis-1/2 flex flex-col ml-10">
    <div class="text-ellipsis text-xl pb-5">
      <%= @product.brand %>
    </div>

    <div class="text-2xl font-bold pb-4">
      <%= @product.model %> (<%= @product.year %>)
    </div>

    <div class="text-xs pb-2">
      Ref: <%= @product.uuid %>
    </div>

    <div class="text-md pb-5">
      <%= @product.description %>
    </div>

    <div>
      <span class="p-2 bg-rose-600 font-bold text-white">
        <%= @product.customizable? ? "Customizable" : "#{@product.standalone_price} â‚¬" %>
      </span>
    </div>

    <div class="grow"></div>

    <div class="text-right">
      <%= link_to "Add to Cart", "#", class: "rounded-lg mt-5 py-3 px-5 hover:bg-rose-600 bg-slate-500 text-white font-medium" %>
    </div>
  </div>
</div>
