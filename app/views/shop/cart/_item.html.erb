<li class="flex items-center gap-5 pt-3 border-t border-slate-100 ">
  <%= image_tag cart_item.product.image, class: "size-24 rounded object-cover" %>

  <div class="pr-5">
    <div class="font-bold text-sm">
      <%= cart_item.product.brand %>
    </div>
    <h3 class=""><%= cart_item.product.model %></h3>

    <dl class="mt-0.5 space-y-px text-[10px] text-slate-600">
      <% cart_item.product.customizable_attributes.each do |attribute| %>
        <div>
          <dt class="inline"><%= attribute.name %>:</dt>
          <dd class="inline">XXS</dd>
        </div>
      <% end %>
    </dl>
    <dl class="mt-0.5 space-y-px text-[10px] text-slate-600">
      <% cart_item.product.customizable_parts.each do |part| %>
        <div>
          <dt class="inline"><%= part.name %>:</dt>
          <dd class="inline">XXS</dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div class="flex flex-1 items-center justify-end gap-2">
    <form>
      <label for="Line1Qty" class="sr-only"> Quantity </label>

      <input
        type="number"
        min="1"
        value="1"
        id="Line1Qty"
        class="h-8 w-12 rounded border-slate-200 bg-slate-50 p-0 text-center text-xs text-slate-600 [-moz-appearance:_textfield] focus:outline-none [&::-webkit-inner-spin-button]:m-0 [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:m-0 [&::-webkit-outer-spin-button]:appearance-none"
      />
    </form>

    <button class="text-slate-600 transition hover:text-rose-600">
      <span class="sr-only">Remove item</span>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
        />
      </svg>
    </button>
  </div>
</li>
